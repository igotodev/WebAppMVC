@using WebAppMVC.Models
@model NoteViewModel

<form method="post" asp-action="DeletePost">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2>Delete Note</h2>
            <hr />
        </div>

        <div class="mb-3 text-secondary">
            <label asp-for="Name">Name</label>
            <input asp-for="Name" disabled class="form-control" />

        </div>
        <div class="mb-3 text-secondary">
            <label asp-for="Message">Message</label>
            <input asp-for="Message" disabled class="form-control" />

        </div>
        <button type="submit" class="btn btn-danger" style="width: 14vh">Delete</button>
        <a asp-controller="Note" asp-action="Index" class="btn btn-primary" style="width: 14vh">Back to List</a>
    </div>
</form>

@section Scripts{
@{
    <partial name="_ValidationScriptsPartial" />
}
}
